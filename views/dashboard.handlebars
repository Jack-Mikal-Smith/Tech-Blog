<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="mb-3">
        <label for="post-name">Post Name:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="mb-3">
        <label for="post-content">Content</label>
        <textarea class="form-control" id="post-content" name="post-content"></textarea>
      </div>
      <div class="mb-3">
        <button type="submit" class="btn btn-primary" id="postbtn">Post</button>
      </div>
    </form>
  </div>

  {{#if Posts.length}}
  <div class="col-md-6 post-list">
    <h2>Current Posts:</h2>

    {{#each Posts as |post|}}
    <div class="card">
      <div class="row mb-2">
        <div class="row mb-4 post">
          <h3 class="card-title" data-id="{{post.id}}">
              {{post.title}}
          </h3>

          <p class="card-text">
              {{post.content}}
          </p>
          <p class="card-subtitle">Created on {{post.date_created}}</p>

        </div>
        <div class="col ms-2">
           <button class="btn btn-outline-danger btn-sm m2" data-id="{{post.id}}" id="delete-btn">DELETE</button>
        </div>

      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>


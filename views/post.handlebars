<div class="text-center">
    <h2>{{name}}</h2>
    <p>{{content}}</p>
    <p>Created by {{user.name}} on {{date_created}}</p>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Leave a Comment:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-content">Comment</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>
<div class="text-center">
    <a href="/home">Return Home</a>
</div>

{{#each comment as |comment| }}
<div class="row mb-4 comment">
    <p>{{comment.content}}</p>
    <p>Commented by {{comment.user.name}} on {{comment.date_created}}</p>
</div>
{{/each}}

<script src="/public/js/comment.js"></script>
